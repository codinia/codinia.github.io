@model codiniatestmvc.Models.Blog

@{

}
@section metatags{
    <meta name="keywords" content="@ViewBag.MetaKeywords" />
    <meta name="description" content="@ViewBag.MetaKeywords" />
    <title>@ViewBag.Titles</title>
}







<div class="container  pb50 margin">

    <div class="row">
        <h6 class="text-capitalize"> @Html.DisplayFor(model => model.Blog_Title) </h6>
        <div class="col-md-9 mb40">

            <article>
                <img src="@Html.DisplayFor(model => model.Blog_Image)" alt="" class="img-fluid mb30">
                <div class="post-content">

                    <ul class="post-meta list-inline">
                        <li class="list-inline-item">
                            <i class="fa fa-user-circle-o"></i> <a class="" href="">  @Html.DisplayFor(model => model.Author_Name)</a>
                        </li>
                        <li class="list-inline-item">
                            <i class="fa fa-calendar-o"></i> <a href="">@DateTime.Now</a>
                        </li>
                        <li class="list-inline-item">
                            <i class="fa fa-tags"></i> <a href="">@Html.DisplayFor(model => model.BlogPost_Tags)</a>
                        </li>
                    </ul>


                    <div> @Html.Raw(Model.blog_Content ?? "")</div>
                    <hr class="mb40">
                    <h4 class="mb40 text-uppercase font500">Author</h4>
                    <div class="media mb40">
                        <i class="d-flex mr-3 fa fa-user-circle fa-5x text-primary"></i>
                        <div class="media-body">
                            <h3 style="font-weight:bold" class="text-capitalize"> @Html.DisplayFor(model => model.Author_Name)</h3>
                        </div>
                    </div>


                    <div class="container">
                        <div id="disqus_thread"></div>
                        <script type="text/javascript">
    var disqus_config = function () {
        this.page.url = "@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path";
        this.page.identifier = "@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path";
    };
    (function () {
        var d = document, s = d.createElement('script');
        s.src = '//codinia-com.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
                        </script>
                        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                        <script id="dsq-count-scr" src="//codinia-com.disqus.com/count.js" async></script>
                    </div>
                </div>





        </div>
        </article>

        <div class="col-md-3  border-left-25 mb40">
            <div class="mb40">
                <form>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search..." aria-describedby="basic-addon2">
                        <button class="input-group-addon" id="basic-addon2"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>

            <div class="mb40">
                <h4 class="sidebar-title">Categories</h4>
                <ul class="list-unstyled categories">
                    <li><a href="#">WEB Development</a></li>
                    <li><a href="#">Sale</a></li>
                    <li class="active">
                        <a href="#">Apartment</a>
                        <ul class="list-unstyled">
                            <li><a href="#">Office</a></li>
                            <li><a href="#">Godown</a></li>
                            <li><a href="#">Gerage</a></li>
                        </ul>
                    </li>
                    
                </ul>
            </div>


        </div>
    </div>

</div>


