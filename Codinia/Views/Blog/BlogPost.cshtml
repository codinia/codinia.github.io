@model BlogPost
@{
    //ViewData["Title"] = "EightTips";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="blog " class="blog_area pt-115 pb-120 ">
    <div class="container ">
        <div class="container-fluid">
            <div class="blog-content-area ">
                <div class="row justify-content-center blog-background ">
                </div>

                <div class="blog_content ">
                    <h1> @Html.Raw(Model.PostTitle)</h1>
                    <ul class="blog_meta d-flex justify-content-center ">
                        <li>By: <a href="@Html.Raw(Model.AuthorURL)">@Html.Raw(Model.AuthorName)</a>&nbsp; / &nbsp;</li>
                        <li>03 Feb 2021</li>
                    </ul>
                    <div> </div>
                    <div style="text-align: center;">

                        <img class="blog-img-section img-responsive" style="max-height: 500px;" src="@Html.Raw(Model.ThumbnailImageUrl)">
                    </div>

                    @Html.Raw(Model.TableOfContent)
                    @Html.Raw(Model.PostContent)
                    <div id="disqus_thread"></div>
                    <script>
    var disqus_config = function () {
        this.page.url = "@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path";
        this.page.identifier = "@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path";
    };

    (function () { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = '//codinia-com.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
                    </script>
                    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

                    <script id="dsq-count-scr" src="//codinia-com.disqus.com/count.js" async></script>
                </div>
            </div>
        </div>
    </div>

</section>














